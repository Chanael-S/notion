<body>

<div class="calculator">
    <input type="text" id="screen" readonly>
    <div class="rows">
        <div class="calculator__row">
            <button class="button accent">(</button>
            <button class="button accent">)</button>
            <button class="button accent" onclick="percent()">%</button>
            <button class="button" id="clean">AC</button>
        </div>
        <div class="calculator__row">
            <button class="button accent" onclick="exponent()">^</button>
            <button class="button">7</button>
            <button class="button">8</button>
            <button class="button">9</button>
            <button class="button accent">*</button>
        </div>
        <div class="calculator__row">
            <button class="button accent" onclick="squareRoot()">√</button>
            <button class="button">4</button>
            <button class="button">5</button>
            <button class="button">6</button>
            <button class="button accent">/</button>
        </div>
        <div class="calculator__row">
            <button class="button accent">.</button>
            <button class="button">1</button>
            <button class="button">2</button>
            <button class="button">3</button>
            <button class="button accent">-</button>
        </div>
        <div class="calculator__row">
            <button class="button">0</button>
            <button class="button accent" style="flex: 2;" onclick="equals()">=</button>
            <button class="button accent">+</button>
        </div>
    </div>
</div>

<script>
    var display = document.getElementById("screen");
    var buttons = document.querySelectorAll(".button");

    buttons.forEach(function(button) {
        button.addEventListener("click", function() {
            const val = button.textContent;
            if (!["=", "AC", "√", "%", "^"].includes(val)) {
                display.value += val;
            }
        });
    });

    document.getElementById("clean").addEventListener("click", () => display.value = "");

    function equals() {
        try {
            let expr = display.value.replace("^", "**");
            display.value = eval(expr);
        } catch (e) {
            display.value = "Erreur";
        }
    }

    function squareRoot() { display.value = Math.sqrt(eval(display.value) || 0); }
    function percent() { display.value = (eval(display.value) || 0) / 100; }
    function exponent() { display.value += "^"; }
</script>
</body>
